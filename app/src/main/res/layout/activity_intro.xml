<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".IntroActivity"
    android:weightSum="1"
    android:background="#b8ff3353">



    <ImageView
        android:layout_width="483dp"
        android:layout_height="300dp"
        android:id="@+id/logoView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon"
        android:layout_weight="0.47"
        android:paddingBottom="20dp"
        android:fadingEdge="horizontal"
        android:theme="@style/AppTheme"
        android:backgroundTint="#898989"
        android:alpha="0.97" />

    <Button
        android:id="@+id/registerbttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="23sp"
        android:background="#ffeb70" />

    <Button
        android:id="@+id/loginbttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="23sp"
        android:layout_marginTop="10dip"
        android:textStyle="bold"
        android:background="#ffeb70" />

</LinearLayout>
